# ios/Podfile

# 1. Dosya yolunu tanımlıyoruz
podhelper_path = File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'podhelper.rb')

# 2. SAVUNMA: Eğer dosya varsa yükle, yoksa hata verme (config-only adımının geçmesini sağlar)
if File.exist?(podhelper_path)
  load podhelper_path
else
  puts "UYARI: podhelper.rb bulunamadı. Yapılandırma oluşturulurken bu adım atlanıyor."
end

platform :ios, '14.0' #

target 'Runner' do
  use_frameworks! # Hive ve Path Provider için kritik
  use_modular_headers!

  # 3. Sadece metod tanımlıysa çalıştır
  if respond_to?(:flutter_install_all_ios_pods)
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
